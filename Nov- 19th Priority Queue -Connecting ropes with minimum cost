#include <bits/stdc++.h>
using namespace std;
int main() {
    
    vector<int> vec = {2,3,4,2,1,4,6};
    priority_queue<int, vector<int>,greater<int>>pq;
    
    for(auto& x : vec){
        pq.push(x);
    }
    
    int cost = 0;
    
    while(pq.size()>1){
        int a = pq.top();
        pq.pop();
        int b = pq.top();
        pq.pop();
        
        int sum = a + b;
        cost += sum;
        
        pq.push(sum);
    }
    
    cout << cost;
    
    return 0;
}
