#include <iostream>
using namespace std;

int main() {
    int n = 5;
    int arr[n] = {5, 4, 3, 2, 1};

    cout << "Initial Array is : ";
    for (int i = 0; i < n; i++) cout << arr[i] << " ";
    cout << endl;

    for (int i = 0; i < n - 1; i++) {
        int minIndex = i;  
        
        for (int j = i + 1; j < n; j++) {
            if (arr[j] < arr[minIndex]) {
                minIndex = j; 
            }
        }
        
        if (minIndex != i) {
            swap(arr[i], arr[minIndex]);
        }
    }

    cout << "Sorted Array is : ";
    for (int i = 0; i < n; i++) cout << arr[i] << " ";

    return 0;
}
