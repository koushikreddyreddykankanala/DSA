#include <iostream>
using namespace std;

void print(int arr[], int n, int idx){
    if (idx >= n) return;
    cout << arr[idx] << " ";
    print (arr, n, idx+1);
}

int sumOfArray (int arr[], int n, int idx){
    if(idx >= n) return 0;
    return arr[idx] + sumOfArray(arr, n, idx+1);
}

void printArrayRev(int arr[], int n, int idx){
    if (idx >= n) return;
    printArrayRev (arr, n, idx+1);
    cout << arr[idx] << " ";
}

int main() {
    
    int n = 5;
    int arr[] = {1,2,3,4,5};
    
    print(arr, n, 0);
    cout << endl;
    
    printArrayRev(arr, n, 0);
    cout << endl;
    
    cout << sumOfArray(arr, n, 0);
    
    
    return 0;
}
