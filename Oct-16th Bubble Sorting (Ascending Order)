#include <iostream>
using namespace std;

int main() {
    int n = 5;
    
    int arr[n] = {5,4,3,2,1};
    
    cout << "Initial Array is : ";
    for(int i = 0; i < n; i++) cout << arr[i] << " ";
    

    for(int i = 0; i < n-1; i++){
        
        bool flag = false;
        
        for(int j = 0; j < n-1-i;j++){
            if(arr[j] > arr[j+1]){
                swap(arr[j],arr[j+1]);
                flag = true;
            }
        }
        if(flag == false){
            break;
        }
    }
    cout << endl;
    cout << "Sorted Array is : ";
    for(int j = 0; j < n ;j++) cout << arr[j] << " ";
    
    return 0;
}
